 <div class="dropdown">
    <button class="dropbtn">Cabinet Options
        <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-content">
        <a href="/cabinets/<%= @cabinet.slug %>">Inventory table</a>
        <a href="/cabinets/new">Create New Cabinet</a>
        <a href="/cabinets/<%= @cabinet.slug %>/liquors">Liquor List</a>
    </div>
</div>
 
 
 <form method="POST" action="/cabinets/<%= @cabinet.slug %>/liquors">
    <label for="cabinet[liquor_ids][]"><h3>Liquors</h3></label>

    
        <% @liquors.each do |liquor| %>
            <input type="checkbox" name="cabinet[liquor_ids][]" id="<%= liquor.id %>" value="<%= liquor.id %>"> <%= liquor.name %><br>
        <% end %>

        <h3>Create New Liquor</h3>
        
        <label for="liquor[name]"><strong>Name: </strong></label>
        <input type="text" name="liquor[name]" id="new_liquor">

        <label for="liquor[liquor_count]"><strong>Par: </strong></label>
        <input type="text" name="liquor[liquor_count]">

        <label for="liquor[liquor_cost]"><strong>Price: </strong></label>
        <input type="text" name="liquor[liquor_cost]">

        <input type="submit" value="Add Liquor">
    </form>